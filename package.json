{
  "name": "nextjs-electron-print",
  "version": "1.0.0",
  "main": "main.js",
  "type": "module",
  "description": "Aplikasi Antrian",
  "author": "Keyla",

  "scripts": {
    "dev": "cross-env PORT=3000 next dev",

    "build": "next build",
    "start": "next start -p 3000",

    "ele": "electron .",
    "ele:build": "electron-builder"
  },

  "dependencies": {
    "next": "14.2.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "cross-env": "^7.0.3"
  },

  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "concurrently": "^8.2.2"
  },

  "build": {
    "appId": "com.antrian.app",
    "productName": "Aplikasi Antrian",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "asar": false,
    "win": {
      "target": "nsis",
      "signAndEditExecutable": false
    }
  }
}
